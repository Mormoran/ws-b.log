<% @articles.each do |article|%>
  <div class="article_wrapper">
    <h2 class="title"><%= link_to article.title, article%></h2>
    <br>
    <p class="date"><%= article.created_at.strftime('%B, %d, %Y')%></p>
    <br>
    <%= link_to 'Edit', edit_article_path(article), class: 'button' %>
    &ensp;|&ensp;<%= link_to 'Show', article_path(article), class: 'button' %>
    &ensp;|&ensp;<%= link_to 'Delete', article_path(article), class: 'button', method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

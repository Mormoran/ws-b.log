<div id="article_content">
  <h1 class="title"><%= @article.title%></h1>
  <br>
  <p class="date">
    Submitted <%= time_ago_in_words(@article.created_at)%> Ago
    &ensp;|&ensp;<%= link_to 'Edit', edit_article_path(@article), class: 'button'%>
    &ensp;|&ensp;<%= link_to 'Delete', article_path(@article), class: 'button'%>
  </p>
  <br>
  <p class="body"><%= @article.description%></p>

  <div id="comments">
    <h2><%= @article.comments.count %> comments</h2>
    <%= render @article.comments %>
    <%= render "comments/form" %>
  </div>
</div>
